<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>

<AnchorPane styleClass="anchor-pane" stylesheets="@Style.css" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.example.demo3.HelloController">

    <VBox spacing="0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">

        <!-- Cabeçalho -->
        <Pane prefHeight="94.0" prefWidth="1280.0" styleClass="top-bar">
            <children>
                <Label layoutX="21.0" layoutY="30.0" styleClass="heading-main" text="Check-out de Hóspede" />
            </children>
        </Pane>

        <!-- Conteúdo Central -->
        <StackPane alignment="CENTER" VBox.vgrow="ALWAYS">
            <VBox alignment="CENTER" prefHeight="634.0" prefWidth="1223.0" spacing="20" styleClass="form-card">
                <!-- Logo -->
                <ImageView fx:id="Logo_Imagem" fitHeight="240.0" fitWidth="375.0" preserveRatio="true" />

                <!-- Número do Quarto -->
                <VBox alignment="CENTER_LEFT" spacing="5">
                    <Label styleClass="form-label" text="Número do Quarto" />
                    <TextField fx:id="quartoField" promptText="Digite o número do quarto" styleClass="input-field" />
                </VBox>

                <!-- CPF do Hóspede -->
                <VBox alignment="CENTER_LEFT" spacing="5">
                    <Label styleClass="form-label" text="CPF do Hóspede" />
                    <TextField fx:id="cpfField" promptText="Digite o CPF do hóspede" styleClass="input-field" />
                </VBox>

                <!-- Data de Check-in -->
                <VBox alignment="CENTER_LEFT" spacing="5">
                    <Label styleClass="form-label" text="Data de Check-in" />
                    <DatePicker fx:id="checkinPicker" prefHeight="25.0" prefWidth="1307.0" styleClass="input-field" />
                </VBox>

                <!-- Data de Check-out -->
                <VBox alignment="CENTER_LEFT" spacing="5">
                    <Label styleClass="form-label" text="Data de Check-out" />
                    <DatePicker fx:id="checkoutPicker" prefHeight="25.0" prefWidth="1307.0" styleClass="input-field" />
                </VBox>

                <!-- Valor Total -->
                <VBox alignment="CENTER_LEFT" spacing="5">
                    <Label styleClass="form-label" text="Valor Total da Estadia" />
                    <TextField fx:id="valorField" promptText="R$ 0,00" styleClass="input-field" editable="false" />
                </VBox>

                <!-- Botões -->
                <HBox alignment="CENTER" spacing="30">
                    <Button fx:id="finalizarButton" styleClass="custom-button" text="Finalizar Check-out" />
                    <Button fx:id="cancelarButton" styleClass="custom-button" text="Cancelar" />
                </HBox>

            </VBox>
        </StackPane>
    </VBox>
</AnchorPane>
