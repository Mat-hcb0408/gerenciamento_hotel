<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<AnchorPane styleClass="anchor-pane" stylesheets="@Style.css" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1">

    <VBox alignment="TOP_CENTER" spacing="30" AnchorPane.bottomAnchor="0" AnchorPane.leftAnchor="0" AnchorPane.rightAnchor="0" AnchorPane.topAnchor="0">
        <padding>
            <Insets bottom="20" left="20" right="20" top="20" />
        </padding>

        <!-- Cabeçalho movido para o canto superior esquerdo -->
        <HBox alignment="TOP_LEFT" maxWidth="800" prefHeight="75.0" prefWidth="303.0" spacing="20" style="-fx-border-radius: 15;" styleClass="top-bar">
            <padding>
                <Insets bottom="20" left="20" right="20" top="20" />
            </padding>
            <Label styleClass="heading-main" text="LOGIN">
                <font>
                    <Font name="Bell MT Bold" size="24" />
                </font>
            </Label>
        </HBox>

        <!-- Mensagem de boas-vindas no centro -->
        <Label styleClass="welcome-message" text="Bem-vindo! Realize aqui seu login" style="-fx-font-size: 20px; -fx-font-weight: bold; -fx-text-fill: #333;" />

        <!-- Formulário central -->
        <StackPane>
            <VBox alignment="CENTER" prefHeight="581.0" prefWidth="325.0" spacing="20" styleClass="form-card">
                <padding>
                    <Insets bottom="40" left="40" right="40" top="40" />
                </padding>

                <!-- Email -->
                <VBox alignment="CENTER_LEFT" spacing="5">
                    <Label styleClass="form-label" text="Email" />
                    <TextField promptText="Digite seu email" styleClass="input-field" />
                </VBox>

                <!-- Senha -->
                <VBox alignment="CENTER_LEFT" spacing="5">
                    <Label styleClass="form-label" text="Senha" />
                    <PasswordField promptText="Digite sua senha" styleClass="input-field" />
                </VBox>

                <!-- Botão Entrar -->
                <Button styleClass="custom-button" text="Entrar" />

                <!-- Link de cadastro -->
                <Label styleClass="link-text" text="Não possui uma conta? Cadastre-se agora!" />

                <!-- Divisor -->
                <Separator />

                <!-- Redes sociais -->
                <VBox alignment="CENTER" spacing="10">
                    <Label styleClass="form-label" text="Entrar com" />
                    <HBox alignment="CENTER" spacing="15">
                        <Button styleClass="custom-button" text="FB" />
                        <Button styleClass="custom-button" text="GO" />
                        <Button styleClass="custom-button" text="F" />
                    </HBox>
                </VBox>
            </VBox>
        </StackPane>
    </VBox>
</AnchorPane>
