<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<AnchorPane prefHeight="720.0" prefWidth="1280.0" styleClass="anchor-pane" stylesheets="@Style.css" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.example.projeto_hotel.HelloController">
   <children>

      <!-- Cabeçalho -->
      <Pane layoutX="151.0" layoutY="52.0" prefHeight="94.0" prefWidth="944.0" styleClass="top-bar">
         <children>
            <Label layoutX="21.0" layoutY="30.0" prefHeight="30.0" prefWidth="300.0" styleClass="titulo-login heading" text="LOGIN">
               <font>
                  <Font name="Bell MT Bold" size="24.0" />
               </font>
            </Label>
            <Label layoutX="323.0" layoutY="33.0" styleClass="heading" text="Bem-vindo! Realize aqui seu login">
               <font>
                  <Font size="24.0" />
               </font>
            </Label>
         </children>
      </Pane>

      <!-- Tela azul escuro contendo os campos -->
      <StackPane layoutX="437.0" layoutY="169.0" prefHeight="482.0" prefWidth="400.0" style="-fx-background-color: #0d1a4b; -fx-background-radius: 15;">
         <children>
            <VBox alignment="CENTER" layoutX="66.0" layoutY="14.0" maxWidth="400.0" prefHeight="473.0" prefWidth="300.0" style="-fx-spacing: 6; -fx-padding: 40;" styleClass="form">

               <!-- Email -->
               <Label layoutX="20.0" layoutY="10.0" styleClass="label-form" text="Email" textFill="WHITE">
                  <font>
                     <Font name="Bell MT" size="16.0" />
                  </font>
               </Label>
               <TextField fx:id="emailField" layoutX="20.0" layoutY="40.0" prefHeight="45.0" prefWidth="363.0" promptText="Digite seu email" styleClass="input" />

               <!-- Senha -->
               <Label layoutX="20.0" layoutY="80.0" styleClass="label-form" text="Senha" textFill="WHITE">
                  <font>
                     <Font name="Bell MT" size="16.0" />
                  </font>
               </Label>
               <PasswordField fx:id="senhaField" layoutX="20.0" layoutY="110.0" prefHeight="45.0" prefWidth="350.0" promptText="Digite sua senha" styleClass="input" />

               <!-- Botão Entrar -->
               <Button id="entrar" fx:id="entrarBtn" layoutX="110.0" layoutY="192.0" mnemonicParsing="false" prefHeight="49.0" prefWidth="150.0" styleClass="availability-button" text="Entrar" />

               <!-- Texto para cadastro -->
               <Label alignment="CENTER" layoutX="50.0" layoutY="241.0" prefHeight="25.0" prefWidth="350.0" styleClass="label-form" text="Não possui uma conta? Cadastre-se agora!" textFill="WHITE">
                  <font>
                     <Font name="Bell MT" size="16.0" />
                  </font>
               </Label>

               <!-- Entrar com opções de redes sociais -->
               <Label layoutX="155.0" layoutY="337.0" text="Entrar com" textFill="WHITE">
                  <font>
                     <Font name="Bell MT" size="16.0" />
                  </font>
               </Label>
               <HBox alignment="CENTER" layoutX="110.0" layoutY="388.0" spacing="10">
                  <Button mnemonicParsing="false" prefHeight="48.0" prefWidth="50.0" styleClass="btn" text="FB" />
                  <Button mnemonicParsing="false" prefHeight="48.0" prefWidth="50.0" styleClass="btn" text="GO" />
                  <Button mnemonicParsing="false" prefHeight="48.0" prefWidth="50.0" styleClass="btn" text="F" />
               </HBox>

            </VBox>
         </children>
      </StackPane>

   </children>
</AnchorPane>
