            <Label layoutX="21.0" layoutY="30.0" prefHeight="30.0" prefWidth="300.0" styleClass="titulo-cadastro" text="Cadastro de Hóspede" textFill="WHITE">
               <font>
                  <Font name="Bell MT Bold" size="24.0" />
               </font>
            </Label>
         </children>
      </Pane>

      <!-- Telinha azul escuro contendo os campos -->
      <Pane layoutX="447.0" layoutY="175.0" prefHeight="482.0" prefWidth="400.0" style="-fx-background-color: #0d1a2b; -fx-background-radius: 15;">
         <children>

            <Label layoutX="20.0" layoutY="10.0" styleClass="label-form" text="Nome do Hóspede" textFill="WHITE">
               <font>
                  <Font name="Bell MT" size="20.0" />
               </font>
            </Label>
            <TextField fx:id="nomeField" layoutX="20.0" layoutY="40.0" prefHeight="30.0" prefWidth="350.0" style="-fx-background-radius: 5;" />

            <Label layoutX="20.0" layoutY="80.0" styleClass="label-form" text="Data de Nascimento" textFill="WHITE">
               <font>
                  <Font name="Bell MT" size="20.0" />
               </font>
            </Label>
            <DatePicker fx:id="nascimentoPicker" layoutX="20.0" layoutY="110.0" prefHeight="49.0" prefWidth="350.0" />

            <Label layoutX="25.0" layoutY="159.0" prefHeight="6.0" prefWidth="34.0" styleClass="label-form" text="CPF" textFill="WHITE">
               <font>
                  <Font name="Bell MT Bold" size="20.0" />
               </font>
            </Label>
            <TextField fx:id="cpfField" layoutX="20.0" layoutY="180.0" prefHeight="30.0" prefWidth="320.0" />

            <ComboBox layoutX="320.0" layoutY="180.0" prefHeight="37.0" prefWidth="50.0" />

            <Label layoutX="20.0" layoutY="220.0" prefHeight="22.0" prefWidth="50.0" styleClass="label-form" text="Email" textFill="WHITE">
               <font>
                  <Font name="Bell MT" size="20.0" />
               </font>
            </Label>
            <TextField layoutX="20.0" layoutY="250.0" prefHeight="30.0" prefWidth="350.0" />

            <Label layoutX="23.0" layoutY="301.0" styleClass="label-form" text="Senha" textFill="WHITE">
               <font>
                  <Font name="Bell MT" size="20.0" />
               </font>
            </Label>
            <TextField layoutX="20.0" layoutY="320.0" prefHeight="30.0" prefWidth="350.0" />

            <Label layoutX="221.0" layoutY="303.0" prefHeight="18.0" prefWidth="149.0" text="Mínimo de 8 caracteres" textFill="WHITE">
               <font>
                  <Font name="Bell MT" size="15.0" />
               </font>
            </Label>

            <!-- Botão Cadastrar -->
            <Button fx:id="cadastrarButton" layoutX="35.0" layoutY="392.0" mnemonicParsing="false" prefHeight="35.0" prefWidth="200.0" styleClass="availability-button" text="Cadastrar" />
            <Button fx:id="cadastrarButton1" layoutX="200.0" layoutY="392.0" mnemonicParsing="false" prefHeight="35.0" prefWidth="200.0" styleClass="availability-button" text="Cancelar" />

         </children>
      </Pane>

   </children>
</AnchorPane>
