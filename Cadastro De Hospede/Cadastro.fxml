<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>

<AnchorPane styleClass="anchor-pane" stylesheets="@Style.css" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.example.demo3.HelloController">

    <VBox spacing="0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">

        <!-- Cabeçalho -->
        <Pane prefHeight="94.0" prefWidth="1280.0" styleClass="top-bar">
            <children>
                <Label layoutX="21.0" layoutY="30.0" styleClass="heading-main" text="Check-in de Hóspede" />
            </children>
        </Pane>

        <!-- Conteúdo Central -->
        <StackPane alignment="CENTER" VBox.vgrow="ALWAYS">
            <VBox alignment="CENTER" prefHeight="634.0" prefWidth="1223.0" spacing="20" styleClass="form-card">
                <!-- Logo -->
                <ImageView fx:id="Logo_Imagem" fitHeight="240.0" fitWidth="375.0" preserveRatio="true" />
                <!-- Nome -->
                <VBox alignment="CENTER_LEFT" spacing="5">
                    <Label styleClass="form-label" text="Nome do Hóspede" />
                    <TextField fx:id="nomeField" promptText="Digite o nome completo" styleClass="input-field" />
                </VBox>

                <!-- Data de nascimento -->
                <VBox alignment="CENTER_LEFT" spacing="5">
                    <Label styleClass="form-label" text="Data de Nascimento" />
                    <DatePicker fx:id="nascimentoPicker" prefHeight="25.0" prefWidth="1307.0" styleClass="input-field" />
                </VBox>

                <!-- CPF -->
                <VBox alignment="CENTER_LEFT" spacing="5">
                    <Label styleClass="form-label" text="CPF/CNPJ" />
                    <HBox alignment="CENTER_LEFT" spacing="10">
                        <TextField fx:id="cpfField" styleClass="input-field" HBox.hgrow="ALWAYS" />
                        <ComboBox fx:id="tipoDocumento" promptText="Tipo" styleClass="input-field" />
                    </HBox>
                </VBox>

                <!-- Email -->
                <VBox alignment="CENTER_LEFT" spacing="5">
                    <Label styleClass="form-label" text="Telefone" />
                </VBox>
            <TextField fx:id="nomeField1" promptText="(99) 99999-9999" styleClass="input-field" />

                <!-- Senha -->
                <VBox alignment="CENTER_LEFT" spacing="5" />

                <!-- Botões -->
                <HBox alignment="CENTER" spacing="30">
                    <Button fx:id="cadastrarButton" styleClass="custom-button" text="Cadastrar" />
                    <Button fx:id="cancelarButton" styleClass="custom-button" text="Cancelar" />
                </HBox>

            </VBox>
        </StackPane>
    </VBox>
</AnchorPane>
