                </TableColumn>
                <TableColumn fx:id="columnTelefone" text="Data de saÃ­da">
                    <cellValueFactory>
                        <PropertyValueFactory property="telefone" />
                    </cellValueFactory>
                    <prefWidth>180</prefWidth>
                </TableColumn>
                <TableColumn fx:id="columnCPF" text="Status">
                    <cellValueFactory>
                        <PropertyValueFactory property="cpf" />
                    </cellValueFactory>
                    <prefWidth>120</prefWidth>
                </TableColumn>
            </columns>
            <columnResizePolicy>
                <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
            </columnResizePolicy>
        </TableView>
    </VBox>
</AnchorPane>
