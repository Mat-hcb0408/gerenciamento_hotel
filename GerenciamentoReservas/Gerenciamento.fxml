<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.image.ImageView?>

<?import javafx.scene.control.Label?>
<AnchorPane xmlns:fx="http://javafx.com/fxml" fx:controller="org.example.demo3.HelloController">
    <children>
        <!-- Logo da Aplicação -->
        <ImageView fx:id="Logo_Imagem" fitHeight="100" fitWidth="300" layoutX="490" layoutY="50" />

        <!-- Barra superior com título -->
        <AnchorPane fx:id="topBar" style="-fx-background-color: #2a2a40; -fx-background-radius: 15; -fx-padding: 10;"
                    layoutX="50" layoutY="10" prefHeight="50" prefWidth="1180">
            <Label text="Hotel Management System"
                   style="-fx-text-fill: white; -fx-font-size: 24px; -fx-font-family: 'Bell MT Bold';"
                   layoutX="500" layoutY="10"/>
        </AnchorPane>

        <!-- Botões -->
        <Button fx:id="cadastrarButton" text="Cadastrar"
                layoutX="50" layoutY="150" prefWidth="120" style="-fx-background-color: #7b2cbf; -fx-text-fill: white; -fx-font-size: 16px;"/>

        <Button fx:id="editarButton" text="Editar"
                layoutX="200" layoutY="150" prefWidth="120" style="-fx-background-color: #7b2cbf; -fx-text-fill: white; -fx-font-size: 16px;"/>

        <Button fx:id="excluirButton" text="Excluir"
                layoutX="350" layoutY="150" prefWidth="120" style="-fx-background-color: #7b2cbf; -fx-text-fill: white; -fx-font-size: 16px;"/>

        <!-- Tabela -->
        <TableView fx:id="tabelaReservas" layoutX="50" layoutY="200" prefHeight="300" prefWidth="1180">
            <columns>
                <TableColumn text="ID Reserva" prefWidth="150" />
                <TableColumn text="Nome do Cliente" prefWidth="300" />
                <TableColumn text="Data de Entrada" prefWidth="200" />
                <TableColumn text="Data de Saída" prefWidth="200" />
                <TableColumn text="Status" prefWidth="100" />
            </columns>
        </TableView>
    </children>
</AnchorPane>
