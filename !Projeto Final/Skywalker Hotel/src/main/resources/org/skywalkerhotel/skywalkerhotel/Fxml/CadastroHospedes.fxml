<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane styleClass="anchor-pane" stylesheets="@../Css/Cadastros.css" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.skywalkerhotel.skywalkerhotel.Controller.CadastroHospedesController">

    <!-- ScrollPane envolvendo todo o VBox -->
    <ScrollPane fitToHeight="true" fitToWidth="true" prefWidth="620.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
        <VBox fillWidth="true" spacing="0">

            <!-- Título -->
            <StackPane>
                <Label styleClass="heading-main" text="Cadastro de Hóspedes">
                    <font>
                        <Font name="Bell MT" size="12.0" />
                    </font>
                </Label>
            </StackPane>

            <!-- Conteúdo Central -->
            <StackPane alignment="CENTER" VBox.vgrow="ALWAYS">
                <VBox alignment="CENTER" prefHeight="757.0" prefWidth="600.0" spacing="20" styleClass="form-card">
                    <!-- Logo -->
                    <ImageView fx:id="Logo_Imagem" fitHeight="240.0" fitWidth="375.0" preserveRatio="true" />

                    <!-- Nome do quarto -->
                    <VBox alignment="CENTER_LEFT" spacing="5">
                        <Label styleClass="form-label" text="Nome do hóspede" />
                        <TextField fx:id="nomeQuartoField" promptText="nome" styleClass="input-field" />
                    </VBox>
                    <VBox alignment="CENTER_LEFT" layoutX="40.0" layoutY="300.0" spacing="5">
                        <children>
                            <Label styleClass="form-label" text="Data de nascimento" />
                     <DatePicker fx:id="dataNascimento" prefHeight="37.0" prefWidth="540.0" />
                        </children>
                    </VBox>
                    <VBox alignment="CENTER_LEFT" layoutX="40.0" layoutY="380.0" spacing="5">
                        <children>
                            <Label styleClass="form-label" text="Telefone" />
                     <TextField fx:id="telefone" promptText="nome" styleClass="input-field" text="(99) 99999-9999" />
                        </children>
                    </VBox>
                    <VBox alignment="CENTER_LEFT" layoutX="40.0" layoutY="460.0" spacing="5">
                        <children>
                            <Label styleClass="form-label" text="CPF/CNPJ" />
                            <ComboBox fx:id="tipoPessoa" prefHeight="35.0" prefWidth="577.0" promptText="Digite o CPF/CNPJ" />
                        </children>
                    </VBox>

                    <!-- valor quarto -->
                    <VBox alignment="CENTER_LEFT" spacing="5" />


                    <!-- Botões -->
                    <HBox alignment="CENTER" spacing="30">
                        <Button fx:id="finalizarButton" styleClass="custom-button" text="Finalizar cadastro" />
                        <Button fx:id="cancelarButton" onAction="#handleVoltarAction" styleClass="custom-button" text="Cancelar" />
                    </HBox>
                </VBox>
            </StackPane>
        </VBox>
    </ScrollPane>
</AnchorPane>
